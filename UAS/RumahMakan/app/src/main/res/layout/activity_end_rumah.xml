<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/dasar"
    android:layout_height="match_parent"
    tools:context=".End_rumah">

<View
        android:layout_width="0dp"
        android:layout_height="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Pesanan Anda"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Sedang Kami Proses"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/rumahmakan"
        android:layout_gravity="center"
        android:layout_height="200dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Terima Kasih"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Sudah Berkunjung Ke"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Rumah Makan Bahagia"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:text="SELESAI"
        android:layout_gravity="center"
        android:onClick="home"
        android:layout_height="wrap_content"/>


</LinearLayout>