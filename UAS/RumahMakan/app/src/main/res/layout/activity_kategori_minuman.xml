<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dasar"
    tools:context=".kategori_minuman">

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Pilihan Minuman"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ES Teh"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="37dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Air Mineral"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="tetes"
            android:src="@drawable/esteh"
            android:layout_height="150dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="mineral"
            android:src="@drawable/air"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:text="Rp. 5.000"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="70dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Rp. 5.000"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:text="ES Kelapa"
            android:textSize="20dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="37dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Es Jeruk"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="kelapases"
            android:src="@drawable/eskelapa"
            android:layout_height="150dp"/>
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="jerukes"
            android:src="@drawable/jeruk" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:text="Rp. 8.000"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="70dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Rp. 8.000"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:onClick="backd"
        android:text="Kembali"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>